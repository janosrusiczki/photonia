<!DOCTYPE html>
<html>
  <head>
    <title><%= (yield(:page_title) + " - " unless yield(:page_title).blank?).to_s + "Photonia" %></title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script defer src="https://use.fontawesome.com/releases/v5.14.0/js/all.js"></script>

    <%= ENV['PHOTONIA_TRACKING_CODE']&.html_safe %>
  </head>

  <body>

    <nav class="navbar has-shadow" role="navigation" aria-label="main navigation">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item" href="<%= root_path %>">
            <img src="/photonia-logo.png" width="156" height="30">
          </a>
          <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <a href="<%= photos_path %>" class="navbar-item">
        <span class="icon"><i class="fas fa-image"></i></span>
        <span>Photos</span>
      </a>

      <a href="<%= tags_path %>" class="navbar-item">
        <span class="icon"><i class="fas fa-tag"></i></span>
        <span>Tags</span>
      </a>

      <a href="<%= albums_path %>" class="navbar-item">
        <span class="icon"><i class="fas fa-book"></i></span>
        <span>Albums</span>
      </a>

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          More
        </a>

        <div class="navbar-dropdown">
          <a class="navbar-item">
            About
          </a>
          <a class="navbar-item">
            Contact
          </a>
          <hr class="navbar-divider">
          <a class="navbar-item">
            Login
          </a>
        </div>
      </div>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="field has-addons">
          <p class="control">
            <input class="input" type="text" placeholder="Find a photo">
          </p>
          <p class="control">
            <button class="button">
              Search
            </button>
          </p>
        </div>
      </div>
    </div>
  </div>
  </div>
</nav>

    <section class="section pt-5">
      <div class="container is-dark">
        <%= yield %>
      </div>
    </section>
  </body>
</html>
